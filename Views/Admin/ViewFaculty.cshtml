@model Exam_Portal.ViewModels.Admin.ViewFacultyViewModel
@{
    ViewData["Title"] = "View Faculty";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Branch</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.User.Any())
        {
            foreach (var user in Model.User)
            {
                <tr>
                    <td>@user.Name @user.LastName</td>
                    <td>@user.Branch</td>
                    <td>
                        <form asp-controller="Admin" asp-action="FacultyDetails" asp-route-id="@user.Id" method="post">
                            <button type="submit" class="btn btn-primary">View</button>
                        </form>
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Admin" asp-action="EditFaculty" asp-route-id="@user.Id">
                            Edit
                        </a>
                    </td>
                    <td>
                        <form asp-controller="Admin" asp-action="DeleteFaculty" asp-route-id="@user.Id" method="post">
                            <button type="submit" class="btn btn-primary">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
