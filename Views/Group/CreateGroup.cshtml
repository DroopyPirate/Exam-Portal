@model Exam_Portal.ViewModels.Group.CreateGroupViewModel
@{
    if (this.User.IsInRole("Admin"))
    {
        Layout = "~/Views/Admin/_Layout.cshtml";
    }
    else if (this.User.IsInRole("Faculty"))
    {
        Layout = "~/Views/Faculty/_Layout.cshtml";
    }
    ViewData["Title"] = "Create Group";
}

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Create Group</h1>
    </div>


    <form asp-controller="Group" asp-action="CreateGroup" method="post" class="mt-3">

        <div class="form-group row">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Enter group name">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Branch" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Branch" class="custom-select"
                        asp-items="Html.GetEnumSelectList<BranchEnum>()">
                    <option selected>Select</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Semester" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Semester" class="custom-select">
                    <option selected>Select</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Division" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Division" class="custom-select"
                        asp-items="Html.GetEnumSelectList<DivisionEnum>()">
                    <option selected>Select</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>

</div>