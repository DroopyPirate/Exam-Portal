@model Exam_Portal.ViewModels.Group.CreateGroupViewModel
@{
    if (this.User.IsInRole("Admin"))
    {
        Layout = "~/Views/Admin/_Layout.cshtml";
    }
    else if (this.User.IsInRole("Faculty"))
    {
        Layout = "~/Views/Faculty/_Layout.cshtml";
    }
    ViewData["Title"] = "Create Group";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Create Group</h6>
    </div>
    <div class="card-body">
        <form asp-controller="Group" asp-action="CreateGroup" method="post" class="">

            <div class="form-group row">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="Enter group name" required>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Branch" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Branch" class="custom-select"
                            asp-items="Html.GetEnumSelectList<BranchEnumNullable>()">
                        <option selected>Select</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Semester" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="number" min="1" max="8" asp-for="Semester" class="form-control" placeholder="">
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Division" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Division" class="custom-select"
                            asp-items="Html.GetEnumSelectList<DivisionEnumNullable>()">
                        <option selected>Select</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </form>

    </div>
</div>
