@model List<ApplicationUser>
@{
    ViewData["Title"] = "Add Student";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Add Student through Import</h6>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="Faculty" asp-action="AddStudentExcel" enctype="multipart/form-data">

            <div class="form-group row">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="form-group">
                <label for="importexcel">Import Data</label>
                <input type="file" class="form-control-file" id="importexcel" name="File" required>
            </div>
            <div class="form-group">
                <input type="submit">
            </div>
        </form>
    </div>
</div>


@if (Model.Any())
{
    <hr>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Uploaded Data</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th scope="col">Email</th>
                            <th scope="col">Password</th>
                            <th scope="col">Name</th>
                            <th scope="col">Middle Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Address</th>
                            <th scope="col">Branch</th>
                            <th scope="col">Semester</th>
                            <th scope="col">Division</th>
                            <th scope="col">DOB</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th scope="col">Email</th>
                            <th scope="col">Password</th>
                            <th scope="col">Name</th>
                            <th scope="col">Middle Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Address</th>
                            <th scope="col">Branch</th>
                            <th scope="col">Semester</th>
                            <th scope="col">Division</th>
                            <th scope="col">DOB</th>
                        </tr>
                    </tfoot>

                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>@user.Password</td>
                                <td>@user.Name</td>
                                <td>@user.MiddleName</td>
                                <td>@user.LastName</td>
                                <td>@user.PhoneNumber</td>
                                <td>@user.Address</td>
                                <td>@user.Branch</td>
                                <td>@user.Semester</td>
                                <td>@user.Division</td>
                                <td>@user.DOB</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
