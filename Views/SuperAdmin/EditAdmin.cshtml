@model Exam_Portal.ViewModels.Admin.FacultyDetailsViewModel
@{
    ViewData["Title"] = "Edit Admin";
}

<div class="card shadow m-4">

    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Admin Details</h6>
    </div>

    <div class="card-body">

        <form asp-controller="SuperAdmin" asp-action="EditAdmin" method="post">

            <div class="form-group row">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" placeholder="">
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="">
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="MiddleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="MiddleName" class="form-control" placeholder="">
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="LastName" class="form-control" placeholder="">
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="">
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Address" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Address" class="form-control" placeholder="">
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Branch" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Branch" class="custom-select mr-sm-2"
                            asp-items="Html.GetEnumSelectList<BranchEnum>()"></select>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="DOB" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="DOB" class="form-control" placeholder="">
                </div>
            </div>

            <div class="form-group row" style="display:inline-block;">
                <div class="col-sm-10">
                    <a class="btn btn-primary" asp-controller="SuperAdmin" asp-action="ViewAdmin">Back</a>
                </div>
            </div>

            <div class="form-group row" style="display:inline-block;">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </form>

    </div>
</div>
